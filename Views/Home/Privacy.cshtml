@{
    ViewData["Title"] = "Free Dictionary";
}

<div class="d-flex flex-column justify-content-center align-items-center vh-100 bg-dark text-white">
    <h1>@ViewData["Title"]</h1>

    <p>Enter a word to find its meaning:</p>

    <div class="col-md-6">
        <form asp-controller="Park" asp-action="DictionaryLookup" method="get">
            <div class="form-group">
                <label for="wordInput">Word:</label>
                <input type="text" name="word" id="wordInput" class="form-control bg-dark text-white border-light" required />
            </div>
            <br />
            <div class="text-center">
                <button type="submit" class="btn btn-primary btn-lg">Look Up</button>
            </div>
        </form>
    </div>

    @if (ViewBag.ErrorMessage != null)
    {
        <p class="text-danger mt-3">@ViewBag.ErrorMessage</p>
    }
    else if (Model != null)
    {
        <h3 class="mt-3">@Model.Word</h3>
        @foreach (var meaning in Model.Meanings)
        {
            <h4>@meaning.PartOfSpeech</h4>
            <ul>
                @foreach (var definition in meaning.Definitions)
                {
                    <li>
                        @definition.DefinitionText
                        @if (!string.IsNullOrWhiteSpace(definition.Example))
                        {
                            <br />
                            <i>Example: @definition.Example</i>
                        }
                    </li>
                }
            </ul>
        }
    }
</div>
