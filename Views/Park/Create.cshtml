@model Parking.Models.User

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-white">Create New User</h1>

<h4 class="text-white">Car Details</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="plateNum" class="control-label text-white"></label>
                <input asp-for="plateNum" class="form-control bg-dark text-white border-light" />
                <span asp-validation-for="plateNum" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="colorCar" class="control-label text-white"></label>
                <input asp-for="colorCar" class="form-control bg-dark text-white border-light" />
                <span asp-validation-for="colorCar" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success btn-lg" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-light mt-3">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
